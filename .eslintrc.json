{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint: recommended",
        "plugin:react/recommended",
        "airbnb"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "rules": {
        "semi": [2, "never"],
        "indent": ["error", 2],
        "quotes": [2, "single", "avoid-escape"]
    }
}
